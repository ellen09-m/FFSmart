<?xml version="1.0" encoding="utf-8"?>
<!-- activity_log_maintenance.xml -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogMaintenanceActivity">

    <!-- Issue EditText -->
    <EditText
        android:id="@+id/issueEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Issue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Date when it happened EditText -->
    <EditText
        android:id="@+id/dateOccurredEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date Occurred (YYYY-MM-DD)"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/issueEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Date Fixed EditText -->
    <EditText
        android:id="@+id/dateFixedEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date Fixed (YYYY-MM-DD)"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dateOccurredEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Description of Fix -->
    <EditText
        android:id="@+id/fixDescriptionEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="How was it fixed?"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dateFixedEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fixDescriptionEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Search Bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Issue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TableLayout for displaying maintenance issues -->
    <TableLayout
        android:id="@+id/maintenanceTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:stretchColumns="1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchView">

        <!-- Table Header Row -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Occurred"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Fixed"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fix Description"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
