<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header and Icons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">

        <!-- Profile Text -->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="45dp"
            android:text="Deliveries"
            android:textColor="#002A69"
            android:textSize="24sp" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/settings_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Settings"
            android:clickable="true"
            android:onClick="onSettingsClick"
            android:src="@android:drawable/ic_menu_preferences" />

        <!-- Hamburger Menu Icon -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="Menu"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_marginStart="1dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B0B0B0"
        android:layout_marginBottom="16dp"/>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Search Box -->
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Search deliveries"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <!-- Filter by Date Button -->
        <Button
            android:id="@+id/filterDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Filter By Date"
            android:background="#002A69"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ListView for Deliveries -->
    <ListView
        android:id="@+id/deliveryReportList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Logo text at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Slogan and Powered by Text -->
        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFSmart Fridge"
            android:textColor="#002A69" />

        <TextView
            android:id="@+id/powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Powered by Seamless Solutions"
            android:textColor="#002A69" />
    </LinearLayout>
</LinearLayout>