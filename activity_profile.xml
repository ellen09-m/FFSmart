<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Header and Icons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">

        <!-- Profile Text -->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="45dp"
            android:text="Profile"
            android:textColor="#002A69"
            android:textSize="24sp" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/settings_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Settings"
            android:clickable="true"
            android:onClick="onSettingsClick"
            android:src="@android:drawable/ic_menu_preferences" />

        <!-- Hamburger Menu Icon -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="Menu"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="@android:color/black"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#002A69"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp" />

    <!-- pROFILE iMAGE -->
    <ImageView
        android:id = "@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Profile Image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:hint="First Name"
        android:textSize="16sp"
        android:gravity="start|center_vertical"/>

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:hint="Last Name"
        android:textSize="16sp"
        android:gravity="start|center_vertical"/>

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:hint="Email"
        android:textSize="16sp"
        android:gravity="start|center_vertical"/>

    <EditText
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:enabled="false"
        android:hint="User ID"
        android:textSize="16sp"
        android:gravity="start|center_vertical"/>


    <Button
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:background="#002A69"
        android:textColor="#FFFFFF" />

    <!-- Logo text at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <!-- Slogan and Powered by Text -->
        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/powered_by"
            android:layout_centerHorizontal="true"
            android:text="FFSmart Fridge"
            android:textColor="#002A69" />

        <TextView
            android:id="@+id/powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Powered by SEAmless Solutions"
            android:textColor="#002A69" />

    </LinearLayout>

</LinearLayout>