<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="12dp"
                android:contentDescription="Profile Icon" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#002A69"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/settings_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Settings"
                android:src="@android:drawable/ic_menu_preferences"
                android:layout_gravity="end" />

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:id="@+id/hamburger_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:contentDescription="Menu"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@android:color/black"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69" />

        <!-- Dark Mode Section -->
        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Dark Mode"
            android:textColor="#002A69"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69"
            android:layout_marginBottom="10dp" />

        <!-- High Contrast Mode -->
        <Switch
            android:id="@+id/switch_high_contrast"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="High Contrast Mode"
            android:textColor="#002A69"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69"
            android:layout_marginBottom="10dp" />

        <!-- Text Size Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Size"
            android:textColor="#002A69"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/text_size_seekbar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="5dp"
            android:max="30"
            android:progress="16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69"
            android:layout_marginBottom="10dp" />

        <!-- Language Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Language"
            android:textColor="#002A69"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/language_spinner"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="5dp"
            android:entries="@array/language_options" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69"
            android:layout_marginBottom="10dp" />

        <!-- Haptic Feedback Section -->
        <Switch
            android:id="@+id/switch_haptic_feedback"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="5dp"
            android:text="Enable Haptic Feedback"
            android:textColor="#002A69"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#002A69"
            android:layout_marginBottom="20dp" />

        <!-- Save and Reset Buttons -->
        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:background="#002A69"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_reset_defaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset to Default"
            android:background="#002A69"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp" />

        <!-- Log Out Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:background="#002A69"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"/>

        <!-- Logo text at the bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Slogan and Powered by Text -->
            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/powered_by"
                android:layout_centerHorizontal="true"
                android:text="FFSmart Fridge"
                android:textColor="#002A69" />

            <TextView
                android:id="@+id/powered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Powered by SEAmless Solutions"
                android:textColor="#002A69" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>