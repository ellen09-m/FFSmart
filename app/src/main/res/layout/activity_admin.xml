<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textSize="24sp"
        android:textColor="#002A69"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#002A69"
        android:layout_below="@id/header"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp" />

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/divider1"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="12dp"
            android:onClick="onProfileClick"
            android:contentDescription="Profile Icon" />

        <!-- Profile Name -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#002A69" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/settings_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Settings"
            android:clickable = "true"
            android:onClick="onSettingsClick"
            android:src="@android:drawable/ic_menu_preferences" />

        <!-- Hamburger Menu Icon -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="Menu"
            android:src="@android:drawable/ic_menu_sort_by_size"
            />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#002A69"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Add User Button -->
    <Button
        android:id="@+id/btn_add_user"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/divider2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="#002A69"
        android:onClick="onAddUserClick"
        android:text="Add User"
        android:textColor="#FFFFFF" />

    <!-- Container to Add User -->
    <LinearLayout
        android:id="@+id/container_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_edges"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_below="@id/btn_add_user"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <!-- Name Input Field -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="#000000"
            android:background="@drawable/rounded_edges"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Email Input Field -->
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#000000"
            android:background="@drawable/rounded_edges"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="32dp" />


        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:padding="12dp"
            android:onClick="onRegisterUserClick" />
    </LinearLayout>

    <!-- User List -->
    <ListView
        android:id="@+id/user_list"
        android:layout_width="368dp"
        android:layout_height="456dp"
        android:layout_below="@id/container_add_user"
        android:layout_marginTop="16dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Slogan and Powered by Text -->
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFSmart Fridge"
        android:textColor="#002A69"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/powered_by" />

    <TextView
        android:id="@+id/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by SEAmless Solutions"
        android:textColor="#002A69"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp" />

</RelativeLayout>
